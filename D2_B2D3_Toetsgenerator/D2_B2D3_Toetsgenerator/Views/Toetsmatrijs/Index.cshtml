@model IEnumerable<D2_B2D3_Toetsgenerator.Models.Toetsmatrijs>

@{
    ViewBag.Title = "Index";
}

<h2>Toetsmatrijs overzicht</h2>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.moduleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.moduleNaam)
            </th>
            <th>
                Studiejaar
            </th>
            <th>
                Blokperiode
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.moduleCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.moduleNaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.studiejaar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.blokperiode)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) @*|
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                </td>
            </tr>
        }
    </table>

</div>
<div>
    <p>
        @Html.ActionLink("Create New", "Create")
        @using (Html.BeginForm("Index", "toetsmatrijs", FormMethod.Get))
        {
        <p>
            Modeulecode: @Html.DropDownList("moduleCode", "All")
            <input type="submit" value="Filter" />
        </p>
        }
    </p>
</div>